@page
@model ApiDashboard.Pages.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page Dashboard ";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-3">



    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-6 col-md-6 mb-4  p-5 text-center bg-image rounded-3 image-spacing" style="
        background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/012.webp');
        height: 400px;">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white">
                        <h1 class="mb-3">Welcome to ESPAS</h1>
                        <h4 class="mb-3">This is a Dashboard Demo</h4>
                        <a data-mdb-ripple-init class="btn btn-outline-light btn-lg mb-4" href="Dashboard" role="button">Visit Dashboard</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-6 col-md-6 mb-4  p-5 text-center bg-image rounded-3 image-spacing" style="
        background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/005.webp');
        height: 400px;">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white">
                        <h1 class="mb-3">Katzenfakt</h1>


                        @if (Model.MeowFact?.Data != null)
                        {
                            <h4>
                                @foreach (var fact in Model.MeowFact.Data)
                                {
                                    @fact
                                }
                            </h4>
                        }
                        else
                        {
                            <p>Keine Daten verfügbar.</p>
                        }
                    </div>

                </div>
                <a data-mdb-ripple-init class="btn btn-outline-light btn-lg mb-4" href="/" role="button">Refresh</a>
            </div>
        </div>

    </div>

</main>
